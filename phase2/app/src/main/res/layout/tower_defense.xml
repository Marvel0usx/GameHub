<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.example.userinterface.GameManager.TowerDefense.GameView
        android:id="@+id/myView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="592dp"
        android:background="#FFFFFF"
        android:onClick="onClick"
        android:text="@string/shoot"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:onClick="onClick"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tower3"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@drawable/tower3"
        android:visibility="invisible"
        android:onClick="towerClick"
        app:layout_constraintBottom_toBottomOf="@+id/tower2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tower2"
        app:layout_constraintTop_toTopOf="@+id/tower2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/tower1"
        android:layout_width="66dp"
        android:layout_height="65dp"
        android:background="@drawable/tower"
        android:visibility="invisible"
        android:onClick="towerClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tower2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tower2"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@drawable/tower2"
        android:visibility="invisible"
        android:onClick="towerClick"
        app:layout_constraintBottom_toBottomOf="@+id/tower1"
        app:layout_constraintEnd_toStartOf="@+id/tower3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tower1"
        app:layout_constraintTop_toTopOf="@+id/tower1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button"
        android:onClick="setTower"
        android:layout_width="90dp"
        android:layout_height="77dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/spot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:onClick="setTower"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:background="@drawable/spot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="107dp"
        android:layout_height="85dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/spot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="107dp"
        android:layout_height="85dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/spot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button5"
        android:layout_width="107dp"
        android:layout_height="85dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/spot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button6"
        android:layout_width="107dp"
        android:layout_height="85dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/spot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="107dp"
        android:layout_height="85dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/spot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="107dp"
        android:layout_height="85dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/spot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button9"
        android:layout_width="107dp"
        android:layout_height="85dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/spot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button10"
        android:layout_width="107dp"
        android:layout_height="85dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/spot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>